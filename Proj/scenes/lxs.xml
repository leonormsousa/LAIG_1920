<lxs>
    <scene root="root" axis_length="5"/>

    <views default="homerCamera">
        <perspective id="homerCamera" near="0.1" far="500" angle="30">
            <from x="0" y="40" z="30" />
            <to x="0" y="20" z="5" />
        </perspective>
    </views>

    <globals>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <background r="0.0" g="0.0" b="0.0" a="1.0" />
    </globals>

    <lights>
        <omni id="homerLight" enabled="1">
            <location x="0" y="25" z="20" w="1.0" />
            <ambient r="1.0" g="1.0" b="1.0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </omni>
        <spot id="spotlight" enabled="1" angle="20" exponent="10">
            <location x="0" y="40" z="-10" w="1.0" />
            <target x="0" y="20" z="5" />
            <ambient r="1.0" g="1.0" b="1.0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
            <attenuation constant="0" linear="0" quadratic="0" />
        </spot>
    </lights>

    <textures>
        <texture id="donutTexture" file="scenes/images/donut.jpg" />
    </textures>

    <materials>
        <material id="yellow" shininess="10">
            <emission r="0" g="0" b="0" a="1.0" />
            <ambient r="0.99" g="0.85" b="0.06" a="1.0" />
            <diffuse r="0.99" g="0.85" b="0.06" a="1.0" />
            <specular r="0.7" g="0.6" b="0.05" a="1.0" />
        </material>
        <material id="pantsMaterial" shininess="10">
            <emission r="0" g="0" b="0" a="1.0" />
            <ambient r="0.44" g="0.82" b="0.99" a="1.0" />
            <diffuse r="0.44" g="0.82" b="0.99" a="1.0" />
            <specular r="0.1" g="0.2" b="0.25" a="1.0" />
        </material>
        <material id="shirtMaterial" shininess="10">
            <emission r="0" g="0" b="0" a="1.0" />
            <ambient r="1.0" g="1.0" b="1.0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="0.25" g="0.25" b="0.25" a="1.0" />
        </material>
        <material id="shoesMaterial" shininess="10">
            <emission r="0" g="0." b="0" a="1.0" />
            <ambient r="0.26" g="1.0" b="0.27" a="1.0" />
            <diffuse r="0.26" g="1.0" b="0.27" a="1.0" />
            <specular r="0.7" g="0.25" b="0.1" a="1.0" />
        </material>
        <material id="donutMaterial" shininess="10">
            <emission r="0" g="0" b="0" a="1.0" />
            <ambient r="0.26" g="1.0" b="0.27" a="1.0" />
            <diffuse r="0.26" g="1.0" b="0.27" a="1.0" />
            <specular r="0.1" g="0.5" b="0.14" a="1.0" />
        </material>
    </materials>

    <transformations>
        <transformation id="vertical_cylinder">
            <rotate axis="x" angle="-90" />
        </transformation>
        <transformation id="horizontal_cylinder">
            <rotate axis="y" angle="-90" />
        </transformation>
    </transformations>

    <primitives>
        <primitive id="rectangle">
            <rectangle x1="-1" y1="-0.5" x2="1" y2="0.5"/>
        </primitive>
        <primitive id="triangle">
            <triangle x1="0" y1="0" z1="0" x2="0" y2="1" z2="0" x3="1" y3="0" z3="0"/>
        </primitive>
        <primitive id="torus">
            <torus inner="1" outer="1.5" slices="40" loops="40"/>
        </primitive>
        <primitive id="sphere">
            <sphere radius="1" slices="40" stacks="20"/>
        </primitive>
        <primitive id="straightCylinder">
            <cylinder base="1" top="1" height="1" slices="50" stacks="30"/>
        </primitive>
        <primitive id="cylinder_3to2">
            <cylinder base="2" top="3" height="1" slices="50" stacks="30"/>
        </primitive>
        <primitive id="cylinder_5to15">
            <cylinder base="1.5" top="0.5" height="2" slices="50" stacks="30"/>
        </primitive>
        <primitive id="cylinder_3to8">
            <cylinder base="8" top="3" height="9" slices="100" stacks="50"/>
        </primitive>
    </primitives>

    <components>
        <component id="hull_rectangle">
            <transformation>
                <translation x="2" y="1" z="0" />
                <scale x="1" y="0.5" z="1"/>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="none" length_s="1" length_t="1"/>
            <children>
                <primitiveref id="rectangle" />
            </children>
        </component>
        <component id="hull_triangle_left">
            <transformation>
                <translation x="2" y="2" z="0" />
                <scale x="0.5" y="0.5" z="1"/>
                <rotate axis="z" angle="180"/>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="none"/>
            <children>
                <primitiveref id="triangle" />
            </children>
        </component>
        <component id="hull_triangle_right">
            <transformation>
                <translation x="6" y="2" z="0" />
                <scale x="-0.5" y="0.5" z="1"/>
                <rotate axis="z" angle="180"/>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="none"/>
            <children>
                <primitiveref id="triangle" />
            </children>
        </component>
        <component id="mast">
            <transformation>
                <translation x="4" y="2" z="0" />
                <scale x="0.025" y="1.5" z="1"/>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="none"/>
            <children>
                <primitiveref id="rectangle" />
            </children>
        </component>
        <component id="sail_right">
            <transformation>
                <translation x="4" y="3" z="0" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="none"/>
            <children>
                <primitiveref id="triangle" />
            </children>
        </component>
        <component id="sail_left">
            <transformation>
                <translation x="4" y="3" z="0" />
                <scale x="-1" y="1" z="-1" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="none"/>
            <children>
                <primitiveref id="triangle" />
            </children>
        </component>
        <component id="frame">
            <transformation>
                <scale x="2" y="3" z="1" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="none"/>
            <children>
                <primitiveref id="rectangle" />
            </children>
        </component>
        <component id="hull">
            <transformation>
                <translate x="0" y="0" z="0" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="none"/>
            <children>
                <componentref id="hull_triangle_right"/>
                <componentref id="hull_triangle_left"/>
                <componentref id="hull_rectangle"/>
            </children>
        </component>
        <component id="sail">
            <transformation>
                <translate x="0" y="0" z="0" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="none"/>
            <children>
                <componentref id="sail_right"/>
                <componentref id="sail_left"/>
            </children>
        </component>
        <component id="boat">
            <transformation>
                <translate x="0" y="0" z="0.1" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="none"/>
            <children>
                <componentref id="hull"/>
                <componentref id="mast"/>
                <componentref id="sail"/>
            </children>
        </component>
        <component id="painting">
            <transformation>
                <translate x="8" y="26" z="0" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="none"/>
            <children>
                <!--<componentref id="frame"/>-->
                <componentref id="boat"/>
            </children>
        </component>
        <component id="outer_eye">
            <transformation>
                <scale x="1" y="1" z="1" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="none"/>
            <children>
                <primitiveref id="sphere"/>
            </children>
        </component>
        <component id="inner_eye">
            <transformation>
                <translation x="0" y="0" z="0.9" />
                <scale x="0.2" y="0.2" z="0.2" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="none"/>
            <children>
                <primitiveref id="sphere"/>
            </children>
        </component>
        <component id="eye">
            <transformation>
                <translate x="0" y="0" z="0" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="none"/>
            <children>
                <componentref id="outer_eye"/>
                <componentref id="inner_eye"/>
            </children>
        </component>
        <component id="eye_right">
            <transformation>
                <translate x="1" y="6" z="0" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="none"/>
            <children>
                <componentref id="eye"/>
            </children>
        </component>
        <component id="eye_left">
            <transformation>
                <translate x="-1" y="6" z="0" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="none"/>
            <children>
                <componentref id="eye"/>
            </children>
        </component>
        <component id="neck">
            <transformation>
                <translate x="0" y="-3" z="0" />
                <transformationref id="vertical_cylinder" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="none"/>
            <children>
                <primitiveref id="cylinder_3to2"/>
            </children>
        </component>
        <component id="mouth">
            <transformation>
                <translate x="0" y="-3" z="0" />
                <scale x="2.5" y="1.5" z="2.5" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="none"/>
            <children>
                <primitiveref id="sphere"/>
            </children>
        </component>
        <component id="head_sphere">
            <transformation>
                <translate x="0" y="8" z="0" />
                <scale x="3" y="2" z="3" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="none"/>
            <children>
                <primitiveref id="sphere"/>
            </children>
        </component>
        <component id="head_cylinder">
            <transformation>
                <translate x="0" y="0.5" z="0" />
                <scale x="1" y="7.5" z="1" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="none"/>
            <children>
                <primitiveref id="cylinder_5to15"/>
            </children>
        </component>
        <component id="head_components">
            <transformation>
                <translate x="0" y="24" z="1" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="none"/>
            <children>
                <componentref id="eye_right"/>
                <componentref id="eye_left"/>
                <componentref id="neck"/>
                <componentref id="mouth"/>
                <componentref id="head_sphere"/>
                <componentref id="head_cylinder"/>
            </children>
        </component>
        <component id="right_forearm">
            <transformation>
                <translate x="-4" y="21" z="0" />
                <scale x="3" y="3" z="1" />
                <transformationref id="horizontal_cylinder" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="none"/>
            <children>
                <primitiveref id="straightCylinder"/>
            </children>
        </component>
        <component id="right_lowarm">
            <transformation>
                <translate x="-7" y="21" z="0" />
                <scale x="1" y="5.5" z="1" />
                <transformationref id="vertical_cylinder" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="none"/>
            <children>
                <primitiveref id="straightCylinder"/>
            </children>
        </component>
        <component id="right_elbow">
            <transformation>
                <translate x="-7" y="21" z="0" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="none"/>
            <children>
                <primitiveref id="sphere"/>
            </children>
        </component>
        <component id="donut">
            <transformation>
                <translate x="-7" y="29" z="0" />
            </transformation>
            <materials>
                <material id="donutMaterial" />
            </materials>
            <texture id="donutTexture"/>
            <children>
                <primitiveref id="torus"/>
            </children>
        </component>
        <component id="right_arm">
            <transformation>
                <translate x="0" y="0" z="0" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="none"/>
            <children>
                <componentref id="right_forearm"/>
                <componentref id="right_elbow"/>
                <componentref id="right_lowarm"/>
                <componentref id="donut"/>
            </children>
        </component>
        <component id="arm_cylinder">
            <transformation>
                <translate x="2.5" y="12" z="0" />
                <scale x="1" y="8" z="1" />
                <transformationref id="vertical_cylinder"/>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="none"/>
            <children>
                <primitiveref id="straightCylinder"/>
            </children>
        </component>
        <component id="finger">
            <transformation>
                <scale x="0.2" y="2" z="0.2" />
                <transformationref id="vertical_cylinder"/>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="none"/>
            <children>
                <primitiveref id="straightCylinder"/>
            </children>
        </component>
        <component id="finger1">
            <transformation>
                <translate x="3.3" y="10" z="0" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="none"/>
            <children>
                <componentref id="finger"/>
            </children>
        </component>
        <component id="finger2">
            <transformation>
                <translate x="2.8" y="10" z="0" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="none"/>
            <children>
                <componentref id="finger"/>
            </children>
        </component>
        <component id="finger3">
            <transformation>
                <translate x="2.3" y="10" z="0" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="none"/>
            <children>
                <componentref id="finger"/>
            </children>
        </component>
        <component id="thumb">
            <transformation>
                <translate x="1.5" y="10" z="0" />
                <scale x="0.2" y="1" z="0.2" />
                <transformationref id="vertical_cylinder"/>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="none"/>
            <children>
                <primitiveref id="straightCylinder"/>
            </children>
        </component>
        <component id="left_arm">
            <transformation>
                <translate x="0" y="0" z="0" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="none"/>
            <children>
                <componentref id="arm_cylinder"/>
                <componentref id="finger1"/>
                <componentref id="finger2"/>
                <componentref id="finger3"/>
                <componentref id="thumb"/>
            </children>
        </component>
        <component id="body">
            <transformation>
                <translate x="0" y="0" z="0" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="none"/>
            <children>
                <componentref id="head_components"/>
                <componentref id="right_arm"/>
                <componentref id="left_arm"/>
            </children>
        </component>
        <component id="torso">
            <transformation>
            <translate x="0" y="13" z="0"/>
            <transformationref id="vertical_cylinder"/>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="none"/>
            <children>
                <primitiveref id="cylinder_3to8"/>
            </children>
        </component>
        <component id="left-shoulder">
            <transformation>   
                <translate x="3" y="21" z="4"/>
                <transformationref id="vertical_cylinder"/>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="none"/>
            <children>
                <primitiveref id="cylinder_5to15"/>
            </children>
        </component>
        <component id="right-shoulder">
            <transformation>
            <translate x="-2" y="21" z="4"/>
            <transformationref id="vertical_cylinder"/>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="none"/>
            <children>
                <primitiveref id="cylinder_5to15"/>
            </children>
        </component>
        <component id="tshirt">
            <transformation>
                <translate x="0" y="0" z="0" />
            </transformation>
            <materials>
                <material id="shirtMaterial" />
            </materials>
            <texture id="none"/>
            <children>
                <componentref id="torso"/>
                <componentref id="left-shoulder"/>
                <componentref id="right-shoulder"/>
            </children>
        </component>
        <component id="pelvis">
            <transformation>
                <translate x="0" y="0" z="0" />
                <scale x="6" y="3" z="6"/>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="none"/>
            <children>
                <primitiveref id="sphere"/>            
            </children>
        </component>
        <component id="leftleg">
            <transformation>
                <translate x="-1.75" y="0" z="0" />
                <scale x="1.75" y="9" z="1.75"/>
                <transformationref id="vertical_cylinder"/>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="none"/>
            <children>
                <primitiveref id="straightCylinder"/>            
            </children>
        </component>
        <component id="rightleg">
            <transformation>
                <translate x="1.75" y="0" z="0" />
                <scale x="1.75" y="9" z="1.75"/>
                <transformationref id="vertical_cylinder"/>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="none"/>
            <children>
                <primitiveref id="straightCylinder"/>            
            </children>
        </component>
        <component id="pants">
            <transformation>
                <translate x="0" y="0" z="0" />
            </transformation>
            <materials>
                <material id="pantsMaterial" />
            </materials>
            <texture id="none"/>
            <children>
                <componentref id="pelvis"/>
                <componentref id="leftleg"/>
                <componentref id="rightleg"/>
            </children>
        </component>
        <component id="leftfoot">
            <transformation>
                <translate x="-1.5" y="1" z="0" />
                <scale x="2.5" y="1" z="1"/>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="none"/>
            <children>
                <primitiveref id="sphere"/>            
            </children>
        </component>
        <component id="leftheel">
            <transformation>
                <translate x="-1.5" y="1" z="0" />
                <scale x="0.5" y="1" z="0.5"/>
                <transformationref id="vertical_cylinder"/>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="none"/>
            <children>
                <primitiveref id="straightCylinder"/>            
            </children>
        </component>
        <component id="leftshoe">
            <transformation>
                <translate x="-1.5" y="1" z="0" />
                <scale x="2.5" y="1" z="1"/>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="none"/>
            <children>
                <componentref id="leftfoot"/>      
                <componentref id="leftheel"/>                  
            </children>
        </component>
        <component id="rightshoe">
            <transformation>
                <scale x="-1" y="1" z="1"/>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="none"/>
            <children>
                <componentref id="leftshoe"/>            
            </children>
        </component>
        <component id="shoes">
            <transformation>
                <translate x="0" y="0" z="0" />
            </transformation>
            <materials>
                <material id="shoesMaterial" />
            </materials>
            <texture id="none"/>
            <children>
                <componentref id="leftshoe"/>  
                <componentref id="rightshoe"/>                      
            </children>
        </component>
        <component id="homer">
            <transformation>
                <translate x="0" y="0" z="2" />
            </transformation>
            <materials>
                <material id="yellow" />
            </materials>
            <texture id="none"/>
            <children>
                <componentref id="body"/>
                <componentref id="tshirt"/>
                <componentref id="pants"/>
                <componentref id="shoes"/>
            </children>
        </component>
        <component id="root">
            <transformation>
                <scale x="0.1" y="0.1" z="0.1" />
            </transformation>
            <materials>
                <material id="yellow" />
            </materials>
            <texture id="none"/>
            <children>
                <componentref id="homer"/>
                <componentref id="painting"/>
            </children>
        </component>
    </components>
</lxs>