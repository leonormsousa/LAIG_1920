<lxs>
    <scene root="demoRoot" axis_length="5"/>

    <views default="defaultCamera">
        <perspective id="defaultCamera" near="0.1" far="500" angle="45">
            <from x="30" y="15" z="30" />
            <to x="0" y="-2" z="0" />
        </perspective>
    </views>

    <ambient>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <background r="0.0" g="0.0" b="0.0" a="1.0" />
    </ambient>

    <lights>
        <omni id="demoLight" enabled="1">
            <location x="9.8" y="11.9" z="10" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </omni>
    </lights>

    <textures>
        <texture id="demoTexture" file="scenes/images/vidral.jpg" />
    </textures>

    <materials>
        <material id="demoMaterial" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="1.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="0.6" g="0.0" b="0.0" a="1.0" />
            <specular r="0.6" g="0.0" b="0.0" a="1.0" />
        </material>
    </materials>

    <transformations>
        <transformation id="demoTransform">
            <scale x="5" y="1" z="5" />
            <rotate axis="x" angle="-45" />
            <rotate axis="z" angle="-45" />
        </transformation>
    </transformations>

    <primitives>
        <primitive id="rectangle">
            <rectangle x1="-1" y1="-0.5" x2="1" y2="0.5"/>
        </primitive>
        <primitive id="triangle">
            <triangle x1="0" y1="0" z1="0" x2="0" y2="1" z2="0" x3="1" y3="0" z3="0"/>
        </primitive>
        <primitive id="torus">
            <torus inner="2" outer="0.5" slices="40" loops="40"/>
        </primitive>
        <primitive id="sphere">
            <sphere radius="1" slices="40" stacks="20"/>
        </primitive>
        <primitive id="straightCylinder">
            <cylinder base="1" top="1" height="1" slices="50" stacks="30"/>
        </primitive>
        <primitive id="cylinder_3to2">
            <cylinder base="2" top="3" height="1" slices="50" stacks="30"/>
        </primitive>
        <primitive id="cylinder_5to15">
            <cylinder base="1.5" top="0.5" height="2" slices="50" stacks="30"/>
        </primitive>
        <primitive id="cylinder_3to8">
            <cylinder base="8" top="3" height="9" slices="100" stacks="50"/>
        </primitive>
    </primitives>

    <components>
        <component id="demoRoot">
            <transformation>
                <translate x="0" y="0" z="0" />
                <scale x="2" y="1" z="1" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <primitiveref id="demoRectangle" />
                <primitiveref id="demoCylinder" />
                <primitiveref id="demoSphere" />
            </children>
        </component>
    </components>
</lxs>