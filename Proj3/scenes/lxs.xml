<lxs>
    <scene root="root" axis_length="5"/>

    <views default="default">
        <perspective id="default" near="0.1" far="500" angle="45">
               <from x="0" y="3" z="8" />
            <to x="0" y="0" z="2" />
        </perspective>
   <ortho id="ortho"  near="0.1" far="500" left="-10" right="10" top="15" bottom="0" >
            <from x="0" y="0" z="10" />
            <to x="0" y="0" z="0" />
        </ortho>
    </views>

    <globals>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <background r="0.0" g="0.0" b="0.0" a="1.0" />
    </globals>

    <lights>
        <omni id="omniLight" enabled="1">
            <location x="0" y="25" z="10" w="1.0" />
            <ambient r="1.0" g="1.0" b="1.0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
            <attenuation constant="1" linear="0" quadratic="0" />
        </omni>
        <spot id="spotlight" enabled="0" angle="20" exponent="10">
            <location x="0" y="5" z="5" w="1.0" />
            <target x="0" y="10" z="3" />
            <ambient r="1.0" g="1.0" b="1.0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
            <attenuation constant="0" linear="1" quadratic="0" />
        </spot>
    </lights>

    <textures>
        <texture id="tile" file="scenes/images/grey.png" />
        <texture id="selected" file="scenes/images/selected.jpg" />
    </textures>

    <materials>
        <material id="yellow" shininess="1">
            <emission r="0" g="0" b="0" a="1.0" />
            <ambient r="1" g="0.85" b="0" a="1.0" />
            <diffuse r="1" g="0.85" b="0" a="1.0" />
            <specular r="0.5" g="0.40" b="0" a="1.0" />
        </material>
        <material id="green" shininess="1">
            <emission r="0" g="0" b="0" a="1.0" />
            <ambient r="0" g="1" b="0" a="1.0" />
            <diffuse r="0" g="1" b="0" a="1.0" />
            <specular r="0" g="0.5" b="0" a="1.0" />
        </material>
        <material id="red" shininess="1">
            <emission r="0" g="0" b="0" a="1.0" />
            <ambient r="1" g="0" b="0" a="1.0" />
            <diffuse r="1" g="0" b="0" a="1.0" />
            <specular r="0.5" g="0" b="0" a="1.0" />
        </material>
        <material id="orange" shininess="1">
            <emission r="0" g="0" b="0" a="1.0" />
            <ambient r="1" g="0.3" b="0" a="1.0" />
            <diffuse r="1" g="0.3" b="0" a="1.0" />
            <specular r="0.5" g="0.15" b="0" a="1.0" />
        </material>
        <material id="blue" shininess="1">
            <emission r="0" g="0" b="0" a="1.0" />
            <ambient r="0.1" g="0.5" b="1" a="1.0" />
            <diffuse r="0.1" g="0.5" b="1" a="1.0" />
            <specular r="0.05" g="0.25" b="0.5" a="1.0" />
        </material>
        <material id="darkBlue" shininess="1">
            <emission r="0" g="0" b="0" a="1.0" />
            <ambient r="0" g="0" b="0.5" a="1.0" />
            <diffuse r="0" g="0" b="0.5" a="1.0" />
            <specular r="0" g="0" b="0.25" a="1.0" />
        </material>
        <material id="violet" shininess="1">
            <emission r="0" g="0" b="0" a="1.0" />
            <ambient r="0.5" g="0.2" b="0.9" a="1.0" />
            <diffuse r="0.5" g="0.2" b="0.9" a="1.0" />
            <specular r="0.25" g="0.1" b="0.45" a="1.0" />
        </material>
        <material id="grey" shininess="1">
            <emission r="0" g="0" b="0" a="1.0" />
            <ambient r="0.5" g="0.5" b="0.5" a="1.0" />
            <diffuse r="0.5" g="0.5" b="0.5" a="1.0" />
            <specular r="0.4" g="0.4" b="0.4" a="1.0" />
        </material>
        <material id="white" shininess="1">
            <emission r="0" g="0" b="0" a="1.0" />
            <ambient r="1.0" g="1.0" b="1.0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="0.5" g="0.5" b="0.5" a="1.0" />
        </material>
        <material id="black" shininess="1">
            <emission r="0" g="0" b="0" a="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="0" g="0" b="0" a="1.0" />
            <specular r="0.3" g="0.3" b="0.3" a="1.0" />
        </material>
    </materials>

    <transformations>
        <transformation id="paintingTransf">
            <translate x="8" y="26" z="0" />   
            <scale x="2" y="2" z="1" />
        </transformation>
    </transformations>

    <animations>
    </animations>

    <primitives>
        <primitive id="rectangle">
            <rectangle x1="-0.5" y1="-0.5" x2="0.5" y2="0.5"/>
        </primitive>
        <primitive id="triangle">
            <triangle x1="0" y1="0" z1="0" x2="0" y2="1" z2="0" x3="1" y3="0" z3="0"/>
        </primitive>
        <primitive id="torus">
            <torus inner="0.75" outer="1.2" slices="40" loops="40"/>
        </primitive>
        <primitive id="sphere">
            <sphere radius="1" slices="40" stacks="20"/>
        </primitive>
        <primitive id="cylinder">
            <cylinder base="1" top="1" height="1" slices="50" stacks="30"/>
        </primitive>
        <primitive id="plane">
            <plane npartsU="4" npartsV="5"/>
        </primitive>
        <primitive id="hexagon">
            <circle radius="1" slices="6"/>
        </primitive>
        <primitive id="circle">
            <circle radius="1" slices="50"/>
        </primitive>
    </primitives>

    <!-- selectable and invisible components must have that indication following the id -->
    <!--                       selectable="y/n" or visible="y/n"                        -->
    <!--    if nothing is said components visibility and selectability are inherited    -->
    <!--                by default, root is non selectable and visible                  -->

    <components>
        <component id="hexagon_side1">
            <transformation>
                <translate x="0.866025" y="0.25" z="0"/>
                <rotate axis="y" angle="90" />
                <scale x="1" y="0.5" z="1"/>
            </transformation>
            <materials>
                <material id="grey" />
            </materials>
            <texture id="none"/>
            <children>
                <primitiveref id="rectangle"/>     
            </children>
        </component>
        <component id="hexagon_side2">
            <transformation>
                <translate x="0.4330127" y="0.25" z="-0.75"/>
                <rotate axis="y" angle="150" />
                <scale x="1" y="0.5" z="1"/>
            </transformation>
            <materials>
                <material id="grey" />
            </materials>
            <texture id="none"/>
            <children>
                <primitiveref id="rectangle"/>     
            </children>
        </component>
        <component id="hexagon_side3">
            <transformation>
                <translate x="-0.4330127" y="0.25" z="-0.75"/>
                <rotate axis="y" angle="-150" />
                <scale x="1" y="0.5" z="1"/>
            </transformation>
            <materials>
                <material id="grey" />
            </materials>
            <texture id="none"/>
            <children>
                <primitiveref id="rectangle"/>     
            </children>
        </component>
        <component id="hexagon_side4">
            <transformation>
                <translate x="-0.866025" y="0.25" z="0"/>
                <rotate axis="y" angle="-90" />
                <scale x="1" y="0.5" z="1"/>
            </transformation>
            <materials>
                <material id="grey" />
            </materials>
            <texture id="none"/>
            <children>
                <primitiveref id="rectangle"/>     
            </children>
        </component>
        <component id="hexagon_side5">
            <transformation>
                <translate x="-0.4330127" y="0.25" z="0.75"/>
                <rotate axis="y" angle="-30" />
                <scale x="1" y="0.5" z="1"/>
            </transformation>
            <materials>
                <material id="grey" />
            </materials>
            <texture id="none"/>
            <children>
                <primitiveref id="rectangle"/>     
            </children>
        </component>
        <component id="hexagon_side6">
            <transformation>
                <translate x="0.4330127" y="0.25" z="0.75"/>
                <rotate axis="y" angle="30" />
                <scale x="1" y="0.5" z="1"/>
            </transformation>
            <materials>
                <material id="grey" />
            </materials>
            <texture id="none"/>
            <children>
                <primitiveref id="rectangle"/>     
            </children>
        </component>
        <component id="hexagon_bottom">
            <transformation>
                <rotate axis="x" angle="180" />
                <rotate axis="y" angle="90"/>
            </transformation>
            <materials>
                <material id="grey" />
            </materials>
            <texture id="none"/>
            <children>
                <primitiveref id="hexagon"/>     
            </children>
        </component>
        <component id="hexagon_top">
            <transformation>
                <translate x="0" y="0.5" z="0" />
                <rotate axis="y" angle="90"/>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="none"/>
            <children>
                <primitiveref id="hexagon"/>     
            </children>
        </component>
        <component id="board">
            <transformation>
                <translate x="0" y="0" z="0"/>
                <scale x="13.3" y="2" z="13.3" />
                <rotate axis="y" angle="90"/>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="none"/>
            <children>
                <componentref id="hexagon_top"/>
                <componentref id="hexagon_bottom"/>
                <componentref id="hexagon_side1"/>
                <componentref id="hexagon_side2"/>
                <componentref id="hexagon_side3"/>
                <componentref id="hexagon_side4"/>
                <componentref id="hexagon_side5"/>
                <componentref id="hexagon_side6"/>
            </children>
        </component>
        <component id="tile">
            <transformation>
                <translate x="0" y="1.1" z="0"/>
                <rotate axis="y" angle="90" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit"/>
            <children>
                <primitiveref id="hexagon"/>     
            </children>
        </component>
        <component id="circle_piece1">
            <transformation>
                <translate x="0" y="1" z="0" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="none"/>
            <children>
                <primitiveref id="circle"/>
            </children>
        </component>
        <component id="circle_piece2">
            <transformation>
                <rotate axis="x" angle="180"/>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="none"/>
            <children>
                <primitiveref id="circle"/>
            </children>
        </component>
        <component id="cylinder_piece">
            <transformation>
                <translate x="0" y="1" z="0"/>
                <rotate axis="x" angle="90"/>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="none"/>
            <children>
                <primitiveref id="cylinder"/>
            </children>
        </component>
        <component id="piece">
            <transformation>
                <scale x="0.5" y="1" z="0.5" />
            </transformation>
            <materials>
                <material id="inherit"/>
            </materials>
            <texture id="none"/>
            <children>
                <componentref id="circle_piece1"/>     
                <componentref id="circle_piece2"/> 
                <componentref id="cylinder_piece"/> 
            </children>
        </component>
        <component id="skybox_back">
            <transformation>
                <translate x="0" y="0" z="-0.5"/>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="none"/>
            <children>
                <primitiveref id="rectangle"/>
            </children>
        </component>
        <component id="skybox_left">
            <transformation>
                <translate x="-0.5" y="0" z="0"/>
                <rotate axis="y" angle="90"/>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit"/>
            <children>
                <primitiveref id="rectangle"/>
            </children>
        </component>
        <component id="skybox_right">
            <transformation>
                <translate x="0.5" y="0" z="0"/>
                <rotate axis="y" angle="270"/>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit"/>
            <children>
                <primitiveref id="rectangle"/>
            </children>
        </component>
        <component id="skybox_front">
            <transformation>
                <translate x="0" y="0" z="0.5"/>
                <rotate axis="y" angle="180"/>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit"/>
            <children>
                <primitiveref id="rectangle"/>
            </children>
        </component>
        <component id="skybox_top">
            <transformation>
                <translate x="0" y="0.5" z="0"/>
                <rotate axis="x" angle="90"/>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit"/>
            <children>
                <primitiveref id="rectangle"/>
            </children>
        </component>
        <component id="skybox_down">
            <transformation>
                <translate x="0" y="-0.5" z="0"/>
                <rotate axis="x" angle="-90"/>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="none"/>
            <children>
                <primitiveref id="rectangle"/>
            </children>
        </component>
        <component id="skybox">
            <transformation>
                <translate x="0" y="50" z="0"/>
                <scale x="100" y="100" z="100"/>
            </transformation>
            <materials>
                <material id="blue" />
            </materials>
            <texture id="none"/>
            <children>
                <componentref id="skybox_back"/>
                <componentref id="skybox_left"/>
                <componentref id="skybox_right"/>
                <componentref id="skybox_front"/>
                <componentref id="skybox_top"/>
                <componentref id="skybox_down"/>
            </children>
        </component>
        <component id="root">
            <transformation>
                <scale x="1" y="1" z="1" />
            </transformation>
            <materials>
                <material id="grey" />
            </materials>
            <texture id="none"/>
            <children>
                <componentref id="board"/>
                <componentref id="skybox"/>
            </children>
        </component>
    </components>
</lxs>